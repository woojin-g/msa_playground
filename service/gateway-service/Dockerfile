# Run the container with `docker run -p 3000:3000 -t gateway-service`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system gateway-service && \
          adduser --system -G gateway-service gateway-service

COPY dist/service/gateway-service gateway-service/
RUN chown -R gateway-service:gateway-service .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix gateway-service --omit=dev -f install

CMD [ "node", "gateway-service" ]
